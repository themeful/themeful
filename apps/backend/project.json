{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend/src",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["dist/apps/backend"],
      "options": {
        "outputPath": "dist/apps/backend",
        "main": "apps/backend/src/main.ts",
        "tsConfig": "apps/backend/tsconfig.app.json",
        "assets": ["apps/backend/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "generatePackageJson": true,
          "externalDependencies": "none",
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/backend/src/environments/environment.ts",
              "with": "apps/backend/src/environments/environment.prod.ts"
            }
          ]
        }
      },
      "dependsOn": [
        {
          "target": "copy-assets",
          "projects": "self"
        }
      ]
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "backend:build"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.ts", "apps/backend/**/*.tsx"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/backend"],
      "options": {
        "jestConfig": "apps/backend/jest.config.ts"
      },
      "configurations": {
        "coverage": {
          "codeCoverage": true
        },
        "watch": {
          "watch": true
        }
      }
    },
    "release": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm -rf ./dist",
          "pnpm nx run frontend:build:production",
          "pnpm nx run backend:copy-assets",
          "pnpm nx run backend:build:production"
        ],
        "parallel": false
      }
    },
    "sample": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "pnpm nx run backend:release",
          "rm -rf ../themeful-sample/themeful",
          "cp -rf ./dist/apps/backend/ ../themeful-sample/themeful"
        ],
        "parallel": false
      }
    },
    "copy-assets": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "rm -rf assets ../../../dist/apps/backend/assets/",
          "cp -ri ../../../dist/apps/frontend/www/ assets"
        ],
        "cwd": "apps/backend/src",
        "parallel": false
      }
    }
  },
  "tags": ["scope:backend"],
  "implicitDependencies": ["frontend"]
}

{
  "name": "ui-lib",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/ui-lib/src",
  "generators": {
    "@nxext/stencil:component": {
      "style": "scss"
    }
  },
  "targets": {
    "build": {
      "executor": "@nxext/stencil:build",
      "outputs": ["{workspaceRoot}/dist/libs/ui-lib"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/ui-lib/tsconfig.lib.json",
        "configPath": "libs/ui-lib/stencil.config.ts",
        "outputPath": "dist/libs/ui-lib"
      },
      "configurations": {
        "production": {
          "dev": false,
          "prod": true
        },
        "watch": {
          "watch": true
        }
      }
    },
    "serve": {
      "executor": "@nxext/stencil:build",
      "outputs": ["{workspaceRoot}/dist/libs/ui-lib"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/ui-lib/tsconfig.lib.json",
        "configPath": "libs/ui-lib/stencil.config.ts",
        "outputPath": "dist/libs/ui-lib"
      }
    },
    "test": {
      "executor": "@nxext/stencil:test",
      "outputs": ["{options.outputPath}"],
      "options": {
        "projectType": "library",
        "configPath": "libs/ui-lib/stencil.config.ts",
        "outputPath": "dist/libs/ui-lib"
      },
      "configurations": {
        "update": {
          "updateSnapshot": true
        },
        "watch": {
          "watch": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/ui-lib/**/*.ts", "libs/ui-lib/**/*.tsx"]
      }
    },
    "e2e": {
      "executor": "@nxext/stencil:e2e",
      "outputs": ["{workspaceRoot}/dist/libs/ui-lib"],
      "options": {
        "projectType": "library",
        "tsConfig": "libs/ui-lib/tsconfig.lib.json",
        "configPath": "libs/ui-lib/stencil.config.ts",
        "outputPath": "dist/libs/ui-lib"
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/ui-lib/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{workspaceRoot}/dist/storybook/ui-lib"],
      "options": {
        "configDir": "libs/ui-lib/.storybook",
        "outputDir": "dist/storybook/ui-lib"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    }
  },
  "tags": ["scope:ui-lib"]
}
